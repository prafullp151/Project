@page
@model RestReviewSystem.Pages.Restaurants.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>

<div>
    <h4>Restaurant</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.RestaurantName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.RestaurantName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.AvgRating)
        </dt>
        <dd class="text-nowrap col-sm-10">
            @for (int i = 0; i < (Model.AvgRatings); i++)
            {
                <span class="glyphicon glyphicon-star"></span>
            }
            @for (int i = Model.AvgRatings; i < 5; i++)
            {
                <span class="glyphicon glyphicon-star-empty"></span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.Avgcostofmeal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.Avgcostofmeal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.VegChoices)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.VegChoices)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.BarAavialable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.BarAavialable)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.NoOFEmployees)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.NoOFEmployees)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.OpeningTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.OpeningTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.ClosingTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.ClosingTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.TypeOfCuisine)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.TypeOfCuisine)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.PaymentMode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.PaymentMode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.DeliveryAvailable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.DeliveryAvailable)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.BuffetAvailable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.BuffetAvailable)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant.CafeAvailable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.CafeAvailable)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Restaurant.RestaurantId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
